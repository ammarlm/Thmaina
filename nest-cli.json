{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/cms/src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "projects": {
    "cms": {
      "type": "application",
      "root": "apps/cms/src",
      "entryFile": "main",
      "sourceRoot": "apps/cms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cms/tsconfig.app.json",
        "deleteOutDir": true
      }
    },
    "discovery": {
      "type": "application",
      "root": "apps/discovery",
      "entryFile": "main",
      "sourceRoot": "apps/discovery/src",
      "compilerOptions": {
        "tsConfigPath": "apps/discovery/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/cms"
}